{
  "name": "norsain-gpt-platform",
  "version": "0.1.0",
  "description": "Platform for managing Custom GPT knowledge packs, agents, and tools",
  "type": "module",
  "scripts": {
    "scaffold": "tsx scripts/scaffold-gpt.mts",
    "validate": "tsx scripts/validate-gpt.mts",
    "validate-templates": "tsx scripts/validate-templates.mts",
    "generate-index": "tsx scripts/generate-index.mts",
    "generate-repo-structure": "tsx scripts/generate-repo-structure.mts",
    "test": "vitest run",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "test:ci": "vitest run --coverage && node scripts/check-coverage.mjs",
    "lint": "eslint . --ext .ts,.mts",
    "format": "prettier --write \"**/*.{ts,mts,json,md}\"",
    "typecheck": "tsc --noEmit",
    "preflight": "npm run lint && npm run typecheck && npm run test",
    "prepare": "husky install"
  },
  "keywords": [
    "gpt",
    "custom-gpt",
    "ai",
    "agents",
    "knowledge-packs"
  ],
  "author": "NORSAIN-AI",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "@vitest/coverage-v8": "^1.6.1",
    "eslint": "^8.55.0",
    "husky": "^9.1.7",
    "markdownlint-cli2": "^0.19.0",
    "prettier": "^3.1.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vitest": "^1.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
