{
  // --------------------------------------------------------------
  // Markdownlint configuration (NORSAIN Standard, 2025)
  // Applies to documentation, GPT knowledge packs, ADRs, READMEs.
  // --------------------------------------------------------------
  "default": true,

  // --------------------------------------------------------------
  // Code fences
  // --------------------------------------------------------------
  "MD040": true, // fenced-code-language
  "MD046": {
    "style": "fenced"
  },

  // --------------------------------------------------------------
  // Headings & structure
  // --------------------------------------------------------------
  "MD041": {
    "level": 1,
    "front_matter_title": "title"
  },
  "MD025": {
    "level": 1,
    "front_matter_title": "title"
  },
  "MD002": {
    "level": 1
  },
  "MD001": true, // no heading-level jumps

  // Use a single blank line before headings
  "MD022": true,

  // --------------------------------------------------------------
  // Line length
  // --------------------------------------------------------------
  "MD013": {
    "line_length": 120,
    "code_blocks": false,
    "tables": false,
    "headings": false
  },

  // --------------------------------------------------------------
  // Lists & spacing
  // --------------------------------------------------------------
  "MD032": true, // blanks-around-lists
  "MD007": {
    "indent": 2
  },
  "MD030": {
    "ol_single": 1,
    "ol_multi": 1,
    "ul_single": 1,
    "ul_multi": 1
  },

  // --------------------------------------------------------------
  // Links
  // --------------------------------------------------------------
  "MD042": true, // no empty links
  "MD051": true, // link fragments must be valid

  // --------------------------------------------------------------
  // Heading punctuation rules
  // --------------------------------------------------------------
  "MD026": {
    "punctuation": ".,:;!?()[]{}"
  },

  // --------------------------------------------------------------
  // Code and shell snippet rules
  // --------------------------------------------------------------
  "MD014": false, // allow snippets without leading $

  // --------------------------------------------------------------
  // Inline HTML allowance
  // --------------------------------------------------------------
  "MD033": false,

  // --------------------------------------------------------------
  // Blank lines & file termination (important in GPT packs)
  // --------------------------------------------------------------
  "MD012": true, // no multiple consecutive blank lines
  "MD047": true // single newline at end of file
}
